{
    "env": {
        "browser": true,
        "es2021": true,
        "jest/globals": true
    },
    "extends": [
        "airbnb-base",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "import/extensions": [
           "error",
           "ignorePackages",
           {
             "js": "never",
           }
        ]
     },
    "plugins": [
        "jest"
    ]
}
